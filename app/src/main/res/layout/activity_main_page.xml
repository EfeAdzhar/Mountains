<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainPageActivity">

    <FrameLayout
        android:id="@+id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/scroll_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </FrameLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="409dp"
        android:layout_height="546dp"
        app:layout_constraintBottom_toTopOf="@+id/under_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upper_layout">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <include layout="@layout/travel_constraint_layout"/>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/under_layout"
        android:layout_width="409dp"
        android:layout_height="83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view">

        <ImageView
            android:id="@+id/search_bar_image_view"
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"

            android:src="@drawable/account" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>