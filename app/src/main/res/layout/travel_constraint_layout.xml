<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/travel_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="204dp"
    android:background="@color/white"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/travel_name"
        android:layout_width="327dp"
        android:layout_height="33dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/invisible_corners"
        android:fontFamily="sans-serif-medium"
        android:text="Похід Чорногорським хребтом"
        android:paddingLeft="5dp"
        android:textSize="20sp"
        app:drawableRightCompat="@drawable/price"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="27dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:background="@color/white"
        android:contentDescription="@string/more_button"
        android:scaleType="centerInside"
        android:src="@drawable/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/travel_name"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_below="@+id/travel_name"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/happy_icon" />

    <TextView
        android:id="@+id/chef_name"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="14dp"
        android:text="Ігор П."
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/travel_name" />

    <ImageView
        android:id="@+id/star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/full_star"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="182dp" />

    <ImageView
        android:id="@+id/star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/chef_name"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/full_star"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/full_star"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="134dp" />

    <ImageView
        android:id="@+id/star_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/full_star"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="158dp" />

    <ImageView
        android:id="@+id/half_star_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/half_star"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="206dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:text="@string/amount_of_reviews"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/half_star_5"
        app:layout_constraintTop_toBottomOf="@+id/travel_name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="75dp"
        android:text="@string/amount_of_hikes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travel_name" />

    <TextView
        android:id="@+id/difficulty_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/difficulty_string"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:id="@+id/group_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_type_string"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_label"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:paddingStart="5dp"
        tools:layout_editor_absoluteX="326dp"
        tools:layout_editor_absoluteY="88dp" />

</androidx.constraintlayout.widget.ConstraintLayout>