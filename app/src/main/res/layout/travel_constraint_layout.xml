<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/travel_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/travel_name"
        android:layout_width="327dp"
        android:layout_height="33dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/invisible_corners"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/hike_chornomorsky_hrebt"
        android:textSize="20sp"
        app:drawableRightCompat="@drawable/price"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="66dp"
        android:layout_height="34dp"
        android:background="@color/white"
        android:contentDescription="@string/more_button"
        android:scaleType="centerInside"
        android:src="@drawable/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chef_icon"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_below="@+id/travel_name"
        android:contentDescription="@string/chef_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/happy_icon" />

    <TextView
        android:id="@+id/chef_name"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="14dp"
        android:text="@string/name_of_chef"
        app:layout_constraintStart_toEndOf="@+id/chef_icon"
        app:layout_constraintTop_toBottomOf="@+id/travel_name" />

    <ImageView
        android:id="@+id/star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/chef_name"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/full_star"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/chef_name"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/full_star"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/chef_name"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/full_star"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/star_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/chef_name"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/full_star"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/half_star_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/chef_name"
        app:layout_constraintTop_toBottomOf="@+id/travel_name"
        app:srcCompat="@drawable/half_star"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:text="@string/amount_of_reviews"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/half_star_5"
        app:layout_constraintTop_toBottomOf="@+id/travel_name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:text="@string/amount_of_hikes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travel_name" />

    <TextView
        android:id="@+id/difficulty_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="7dp"
        android:text="@string/difficulty_string"
        app:layout_constraintEnd_toStartOf="@+id/difficulty_type_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chef_icon" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="35dp"
        android:text="@string/price_label"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/price"
        app:layout_constraintStart_toEndOf="@+id/group_type_view"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/price"
        android:layout_width="60dp"
        android:layout_height="19dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="35dp"
        android:paddingStart="5dp"
        android:text="@string/price"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/difficulty_type_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/difficulty_type_hard"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/difficulty_types_hard"
        app:layout_constraintStart_toEndOf="@+id/difficulty_text_view"
        app:layout_constraintTop_toBottomOf="@+id/chef_name" />

    <TextView
        android:id="@+id/group_type_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:background="@drawable/group_type_mixed"
        android:paddingStart="5dp"
        android:text="@string/group_type_mixed"
        app:layout_constraintStart_toEndOf="@+id/group_type"
        app:layout_constraintTop_toBottomOf="@+id/half_star_5" />

    <TextView
        android:id="@+id/group_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:text="@string/group_type_string"
        app:layout_constraintEnd_toStartOf="@+id/group_type_view"
        app:layout_constraintStart_toEndOf="@+id/difficulty_type_view"
        app:layout_constraintTop_toBottomOf="@+id/star_1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="7dp"
        android:text="@string/date_of_hike_start_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/difficulty_text_view" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:text="16.06.2024 - 26.06.2025 :)"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/difficulty_type_view"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="22dp"
        android:background="@color/shamrock_green"
        android:gravity="center"
        android:text="ЗАПИТ НА ПРИЄДНАННЯ"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="84dp"
        android:layout_height="19dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="22dp"
        android:text="Місце збору:"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="13dp"
        android:text="Івано-Франківськ"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Тип трансферу:"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Тільки пальне"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/price_text_view" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="41dp"
        android:text="Маршрут:"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="270dp"
        android:layout_height="46dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="3dp"
        android:text="с. Тетеря - г. Хомяк - Полонина Хом'яків - г. Синяк - г. Малий Гонгар - Буковель"
        app:layout_constraintEnd_toStartOf="@+id/textView13"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="52dp"
        android:layout_height="23dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="15dp"
        android:text="(25) км"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</androidx.constraintlayout.widget.ConstraintLayout>